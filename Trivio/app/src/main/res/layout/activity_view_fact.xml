<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_fact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.triviathrowtoy.trivio.ViewFactActivity">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="@color/colorWhite"
        android:id="@+id/factText"
        android:layout_above="@+id/downVoteButton"
        android:textSize="24sp" />

    <ImageButton
        app:srcCompat="@drawable/ic_action_thumbs_down"
        android:background="@color/colorBackground"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="100dp"
        android:layout_width="125dp"
        android:scaleType="fitCenter"
        android:id="@+id/downVoteButton" />

    <ImageButton
        app:srcCompat="@drawable/ic_action_thumbs_up"
        android:background="@color/colorBackground"
        android:scaleType="fitCenter"
        android:id="@+id/upVoteButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="100dp"
        android:layout_width="125dp" />

    <ImageView
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/factText"
        android:layout_width="10dp" />


</RelativeLayout>
